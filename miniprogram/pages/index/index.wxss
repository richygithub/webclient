/* pages/index/index.wxss */
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.content {
  flex: 1;
}

.course-list {
  padding: 20rpx;
}

.course-item {
  background: white;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.cover {
  width: 100%;
  height: 400rpx;
}

.info {
  padding: 20rpx;
}

.title {
  font-size: 32rpx;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.price {
  color: #f40;
  font-size: 36rpx;
  font-weight: bold;
}

.tab-bar {
  height: 120rpx;
  display: flex;
  border-top: 1rpx solid #eee;
  background: white;
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
}

.tab-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 8rpx;
}

.tab-text {
  font-size: 24rpx;
  color: #666;
}

.active .tab-text {
  color: #07c160;
}

.badge {
  position: absolute;
  top: 8rpx;
  right: 40rpx;
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: #f40;
}