/* pages/product-detail/product-detail.wxss */
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 加载状态 */
.loading-container, .error-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.loading-text {
  margin-top: 20rpx;
  color: #666;
  font-size: 28rpx;
}

.error-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
}

.error-text {
  color: #999;
  font-size: 32rpx;
  margin-bottom: 40rpx;
}

.retry-btn {
  width: 240rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  background: #07c160;
  color: white;
  border-radius: 40rpx;
}

/* 内容区 */
.content {
  flex: 1;
  background: #f8f8f8;
}

.swiper {
  height: 500rpx;
  background: #fff;
}

.swiper-image {
  width: 100%;
  height: 100%;
}

.info-section {
  padding: 30rpx;
  background: #fff;
  margin-top: 20rpx;
}

.price-row {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
  margin-bottom: 20rpx;
}

.price {
  color: #f40;
  font-size: 48rpx;
  font-weight: bold;
}

.duration {
  color: #666;
  font-size: 28rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 500;
  line-height: 1.4;
  margin-bottom: 15rpx;
}

.location {
  color: #666;
  font-size: 28rpx;
  margin-bottom: 30rpx;
  display: block;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  margin: 40rpx 0 20rpx;
  display: block;
  color: #333;
}

.feature-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.dot {
  color: #07c160;
  margin-right: 10rpx;
  font-size: 32rpx;
}

.feature-item .text {
  flex: 1;
  color: #666;
  font-size: 28rpx;
  line-height: 1.5;
}

.desc {
  color: #666;
  font-size: 28rpx;
  line-height: 1.6;
}

/* 底部购买栏 */
.footer {
  padding: 20rpx 30rpx;
  background: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.05);
}

.buy-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background: linear-gradient(90deg, #07c160, #09d669);
  color: white;
  border-radius: 45rpx;
  font-size: 34rpx;
  font-weight: 500;
}


.qrcode-section {
  margin: 40rpx;
  text-align: center;
}

.section-title {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 30rpx;
  display: block;
}

.qrcode-image {
  width: 60%;
  height: auto;
  margin: 20rpx auto;
  border: 1rpx solid #eee;
  padding: 20rpx;
}