/* 商品卡片自定义样式 */
.custom-tags {
  margin-top: 10rpx;
}

.van-card__price {
  color: #ee0a24;
  font-size: 36rpx;
}

.van-card__title {
  font-size: 32rpx !important;
  line-height: 1.5;
}

/* 添加按钮样式 */
.add-button .add-btn {
  height: 50rpx !important;
  line-height: 50rpx !important;
}

/* 删除图标样式 */
.delete-icon {
  color: #ee0a24;
  padding: 10rpx;
  font-size: 32rpx !important;
}

/* 区块间隔 */
.section {
  margin: 20rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.1);
}

/* 底部提交栏样式 */
.submit-bar {
  box-shadow: 0 -4rpx 12rpx rgba(0,0,0,0.1);
}

.van-submit-bar__bar {
  height: 120rpx !important;
}

.custom-tip {
  padding: 20rpx 32rpx;
  font-size: 26rpx;
  color: #666;
  background: #fafafa;
}