/* 容器样式 */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 课程信息 */
.course-info {
  background: white;
  padding: 30rpx;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
}
.title {
  font-size: 36rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 20rpx;
}
.price {
  font-size: 32rpx;
  color: #e64340;
}

/* 表单样式 */
.form-item {
  background: white;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border-radius: 16rpx;
}
.label {
  font-size: 28rpx;
  color: #666;
  display: block;
  margin-bottom: 20rpx;
}
.input {
  font-size: 32rpx;
  height: 80rpx;
  border-bottom: 1rpx solid #eee;
  padding: 10rpx 0;
}

/* 提交按钮 */
.submit-btn {
  margin-top: 60rpx;
  width: 90%;
  border-radius: 50rpx;
  font-size: 32rpx;
}