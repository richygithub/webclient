.container {
  display: flex;
  flex-direction:column;
  align-items: flex-start;
  padding: 0 30rpx;
  background: #f5f5f5;
  

}

.row {
  display: flex;
  justify-content :center;
  margin: 10rpx 0;
  padding: 24rpx 30rpx;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.05);
}

.label {
  width: 200rpx;
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.value {
  flex: 1;
}

.bind-btn {
  display: inline-block;
  padding: 0 32rpx;
  height: 64rpx;
  line-height: 64rpx;
  background: #07c160;
  color: #fff;
  border-radius: 32rpx;
  font-size: 28rpx;
}

.phone {
  margin-left: 30rpx;
  color: #666;
  font-size: 28rpx;
}

.travelers {
  padding-left: 20rpx;
}

.traveler-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #eee;
}

.traveler-item .name {
  font-size: 30rpx;
  color: #444;
}

.add-btn {
  color: #1989fa;
  font-size: 28rpx;
  padding: 24rpx 0;
  display: flex;
  align-items: center;
}